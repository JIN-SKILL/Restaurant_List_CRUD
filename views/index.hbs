<!-- search bar -->
<div class="container search-bar">
  <div class="search-bar-outer">
    <div class="row">
      <div class="col-9 search-bar-inner">
        <form action="/search">
          <h4 class="mb-2">尋找餐廳：</h4>
          <div class="input-group">
            <input type="text" value="{{ keyword }}" name="keyword" class="form-control" placeholder="輸入餐廳、分類" aria-label="Restaurant Name..." value="" aria-describedby="search-button">
            <div class="input-group-append">
              <button class="btn btn-major" type="submit" id="search-button"><i class="fas fa-search"></i></button>
            </div>
          </div>
        </form>
      </div>
      <div class="col-3 d-flex justify-content-center align-items-end">
        {{!-- 預留空間 --}}
      </div>
    </div>
  </div>
</div>

<!-- restaurant list -->
<div class="container mt-5">
  <div class="row row-cols-4">
    {{#each restaurants}}
    <div class="col">
      <a href="/restaurant/{{ this._id }}" class="text-secondary">
        <div class="card">
          <div class="card-body px-2 pt-2">
            <img class="card-img-top" src="{{ this.image }}" alt="{{ this.name }}">
            <h6 class="card-title my-2">{{ this.name }}</h6>
            <div class="restaurant-category mb-1">
              <i class="fas fa-utensils pr-2"></i> {{ this.category }}
              <span class="badge badge-pill badge-danger font-weight-normal">
                {{ this.rating }}
                <i class="fas fa-star fa-xs"></i>
              </span>
              <span class="mr-3">
                <a href="#"><i class="fas fa-edit"></i></a>
                <a href="/restaurant/delete/{{ this._id }}"><i class="fas fa-trash"></i></a>
              </span>
            </div>
          </div>
        </div>
      </a>
    </div>
    {{/each}}
  </div>
</div>
